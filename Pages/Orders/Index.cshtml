@page
@model ST10310998_CLDV6212_POE__Part_1.Pages.Orders.IndexModel
@{
    ViewData["Title"] = "Order Management System";
}

<!-- Hero Section -->
<section class="hero bg-primary text-white text-center py-5" style="background: url('/images/hero-bg.jpg') no-repeat center center; background-size: cover;">
    <div class="container">
        <h1 class="display-4">Welcome to the Order Management System</h1>
        <p class="lead">Manage your orders efficiently with our cutting-edge tools and user-friendly interface.</p>
        <a href="#features" class="btn btn-light btn-lg">Discover Features</a>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-upload fa-3x mb-3 text-primary"></i>
                        <h5 class="card-title">Upload Product Images</h5>
                        <p class="card-text">Effortlessly upload and manage your product images directly within our platform.</p>
                        <a href="#upload" class="btn btn-primary">Upload Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-list-alt fa-3x mb-3 text-primary"></i>
                        <h5 class="card-title">Manage Order Queue</h5>
                        <p class="card-text">Keep track of your orders with our streamlined queue management system.</p>
                        <a href="#queue" class="btn btn-primary">Manage Orders</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-headset fa-3x mb-3 text-primary"></i>
                        <h5 class="card-title">Support & Assistance</h5>
                        <p class="card-text">Access comprehensive support and get assistance from our dedicated team.</p>
                        <a href="#contact" class="btn btn-primary">Get Support</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section id="testimonials" class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-4">What Our Users Say</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="testimonial p-4 border rounded shadow-sm">
                    <p class="mb-3">"The Order Management System has significantly streamlined our processes and improved our productivity. Highly recommend!"</p>
                    <footer class="blockquote-footer">John Doe, <cite title="Source Title">Company ABC</cite></footer>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="testimonial p-4 border rounded shadow-sm">
                    <p class="mb-3">"A game-changer for our business. The intuitive interface and powerful features make managing orders a breeze."</p>
                    <footer class="blockquote-footer">Jane Smith, <cite title="Source Title">XYZ Corp</cite></footer>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="testimonial p-4 border rounded shadow-sm">
                    <p class="mb-3">"Exceptional service and support. The system's reliability and ease of use are top-notch."</p>
                    <footer class="blockquote-footer">Alice Johnson, <cite title="Source Title">Tech Solutions</cite></footer>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call-to-Action Section -->
<section id="cta" class="text-center py-5">
    <div class="container">
        <h2>Ready to Get Started?</h2>
        <p>Join thousands of satisfied users who have transformed their order management process.</p>
        <a href="#features" class="btn btn-primary btn-lg">Start Now</a>
    </div>
</section>
